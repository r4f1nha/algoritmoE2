#include <stdio.h>
#define TAM 8

int main()
{
    int v[TAM], soma, x, y;
    // entrada
    
   for (int i=0; i<TAM; i++) {
        printf("Digite um valor v[%d]: ", i);
        scanf("%d", &v[i]);
    } 

      printf("Digite o valor X de uma posicao de (0 a 8) : ", x);
        scanf("%d", &x);   
        
      printf("Digite o valor Y de uma posicao de (0 a 8) : ", y);
        scanf("%d", &y);
        
        while (x<0||x>=TAM) {
            printf("Valor invalido. Digite novamente!");
            scanf("%d", &x);
        }
    
    soma=v[x]+v[y];
    
    printf("A soma dos valores nas posicoes %d e %d Ã© %d", x, y, soma);
    
    
    return 0;
}
